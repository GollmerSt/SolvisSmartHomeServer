[Unit]
Description=SolvisSmartHomeServer
Wants=network.target
After=network.target

[Service]
User=solvis
RemainAfterExit=yes
ExecStart=/usr/bin/java -agentlib:jdwp=transport=dt_socket,suspend=n,server=y,address=0.0.0.0:10737 -jar /opt/solvis/SolvisSmartHomeServer/SolvisSmartHomeServer.jar
ExecStop=/usr/bin/java -jar /opt/solvis/SolvisSmartHomeServer/SolvisSmartHomeServer.jar --server-terminate

[Install]
WantedBy=multi-user.target